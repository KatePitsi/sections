{
  "name": "sections",
  "version": "1.0.0",
  "description": "sections",
  "scripts": {
    "sass": "sass --watch scss/style.scss:css/style.min.css --style=compressed",
    "tailwind": "tailwindcss -i ./tailwind/tailwind.css -o ./css/tailwind.css --minify --watch",
    "server": "lite-server",
    "start": "concurrently \"npm run sass\" \"npm run tailwind\" \"npm run server\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lite-server": "^2.6.1",
    "sass": "^1.69.0",
    "tailwindcss": "^4.1.11"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.11"
  }
}
